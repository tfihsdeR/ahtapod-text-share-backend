{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "target": "ES2023",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/types/express/index.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist/*",
        "src/static"
    ]
}